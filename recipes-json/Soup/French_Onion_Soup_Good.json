{
  "name": "French Onion Soup (Good)",
  "ingredients": [
    "2 Tbsp butter",
    "5 medium red onions (3 lb.)",
    "6 cups chicken broth",
    "1 3/4 cups beef broth",
    "1/4 cups red wine",
    "2 sprigs parsley",
    "1 tsp thyme",
    "1 bay leaf",
    "1 Tbsp balsamic vinegar"
  ],
  "instructions": [
    "Melt butter.",
    "Add onions.",
    "Cook 3 minutes until onions are reduced.",
    "Stir in rest of stuff.",
    "Simmer about 20 minutes.",
    "Stir in vinegar and seasonings."
  ]
}