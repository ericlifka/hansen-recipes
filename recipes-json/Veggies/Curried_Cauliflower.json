{
  "name": "Curried Cauliflower",
  "ingredients": [
    "1 head cauliflower",
    "1 1/2 Tbsp curry powder (more or less)",
    "1/2 cups white wine",
    "1/2 cups mayo",
    "salt and pepper"
  ],
  "instructions": [
    "Cut up cauliflower and steam.",
    "Cook wine, mayo and seasonings until well mixed.",
    "Pour over steamed cauliflower.",
    "Serve."
  ]
}