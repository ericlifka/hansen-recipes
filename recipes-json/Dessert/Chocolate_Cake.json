{
  "name": "Chocolate Cake",
  "ingredients": [
    "Cake:",
    "2 cups sugar",
    "1/2 cups shortening",
    "2 eggs",
    "1/2 cups shortening",
    "2 eggs",
    "1/4 tsp salt",
    "4 Tbsp cocoa",
    "1 cups buttermilk",
    "2 tsp soda",
    "1 tsp vanilla",
    "2 1/2 cups flour",
    "1 cups water",
    "Frosting:",
    "2 cups powdered sugar",
    "2 Tbsp cream",
    "2 Tbsp butter",
    "2 Tbsp flour",
    "2 tsp vanilla",
    "1/2 cups Crisco",
    "1 egg white",
    "salt"
  ],
  "instructions": [
    "Whip frosting ingredients together and set aside.",
    "Mix all but water.",
    "Boil water and add last.",
    "Bake at 375 for 50 minutes.",
    "Let cool until cool to the touch.",
    "Coat in frosting."
  ]
