{
  "name": "Cranberry Bread",
  "ingredients": [
    "2 cups flour",
    "1/2 tsp salt",
    "1/2 tsp baking soda",
    "1 1/2 tsp baking powder",
    "3/4 cups sugar",
    "1 egg",
    "2 Tbsp shortening",
    "1/2 cups orange juice",
    "2T. hot water",
    "1/2 cups nuts",
    "1 cups cranberry"
  ],
  "instructions": [
    "Cut cranberries and nuts.",
    "Sift the dry ingredients together.",
    "Add liquid and combine until dry ingredients are moistened.",
    "Fold in nuts, cranberries.",
    "Bake 1 hour and 10 minutes at 350."
  ]
}